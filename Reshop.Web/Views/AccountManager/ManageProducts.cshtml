@model Tuple<IEnumerable<ProductViewModel>, int, int>
@{
    ViewData["Title"] = "ManageProducts";
}

<div class="row">

    <div class="col-sm-12 col-md-4 col-lg-3">

        <partial name="AccountManager/_MenuAccount" model="AccountMenuActivePage.ShopperProduct" />

    </div>


    <div class="col-sm-12 col-md-8 col-lg-9">
        <div class="row">
            <div class="col-12">
                <div class="profile-nav box-shadow">
                    <ul>
                        <li class="active"><a asp-action="ManageProducts">کالا های من</a> </li>
                        <li><a asp-controller="AccountManager" asp-action="ProductsAccess">افزودن کالا</a> </li>
                        <li class="active"><a asp-action="ShopperRequests">درخواست ها</a> </li>
                    </ul>
                </div>
            </div>
            <div class="col-12 mt-3">
                <div class="user-data box-shadow">
                    @if (!Model.Item1.Any())
                    {
                        <div class="alert alert-warning text-muted m-0">
                            @User.FindFirstValue(ClaimTypes.Name) عزیز شما تا حالا محصولی ثبت نکرده اید.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">نام محصول</th>
                                        <th scope="col">قیمت</th>
                                        <th scope="col">برند</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Item1)
                                    {

                                        <tr>
                                            <th scope="row">@item.ProductTitle</th>
                                            <td>@item.ProductPrice</td>
                                            <td>@item.BrandName</td>
                                            <td>
                                                <a class="btn btn-info text-white" 
                                                   asp-controller="AccountManager"
                                                   asp-action="ShopperProductDetail"
                                                   asp-route-productId="@item.ProductId">جزئیات</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    }


                </div>

            </div>


        </div>
    </div>
</div>


