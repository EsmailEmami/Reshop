@model EditColorOfShopperProductViewModel

@{
    Layout = null;
}

<form asp-action="EditProductOfShopper" method="post" onsubmit="return SubmitFormData(this)">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">

        <input type="hidden" asp-for="ShopperProductColorId" />

        <div class="col-sm-12 col-lg-4">
            <div class="form-field">
                <input asp-for="QuantityInStock">
                <label><i class="far  fa-user"></i> تعداد موجودی</label>
                <span asp-validation-for="QuantityInStock" class="text-danger"></span>
            </div>
        </div>

        <div class="col-sm-12 col-lg-8">
            <div class="form-field">
                <input asp-for="Price">
                <label><i class="far fa-phone"></i> شماره تلفن</label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="col-sm-12 ">
            <div class="form-check">
                <input type="checkbox" asp-for="IsActive">
                <label>ادامه به فروش </label>
            </div>
        </div>
    </div>


    <button type="submit" class="btn btn-success">ثبت</button>
</form>

<script src="~/js/Input.js"></script>