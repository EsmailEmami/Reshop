@model IAsyncEnumerable<ProductViewModel>

<section class="product-section box-shadow">


    <div class="shape-divider-popular">
        <img class="shape-divider-product-img" src="/icons/wonder-shape.svg" alt="" srcset="">
    </div>


    <div class="product-section-header">
        <div>
            <h2 class="section-title"><i class="far fa-star-shooting"></i> پیشنهاد شگفت انگیز</h2>
        </div>
        <div>
            <span id="timer"></span>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="carousel-product owl-carousel owl-theme">
                @await Html.PartialAsync("Product/_CarouselBoxProducts", Model)
            </div>
        </div>
    </div>

    <div class="btn-more-and-nav-slider">
        <button class="btn btn-more-info">مشاهده ی همه</button>
    </div>


</section>

