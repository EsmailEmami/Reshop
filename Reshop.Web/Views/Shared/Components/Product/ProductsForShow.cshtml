@model IEnumerable<ProductViewModel>



<section class="product-section box-shadow">
    @if (Model != null && Model.Any())
    {

        <div class="shape-divider">
            <img class="shape-divider-product-img" src="/icons/shape-divider.svg" alt="" srcset="">
        </div>

        <div class="product-section-header">
            <div>
                <h2 class="section-title"><i class="far fa-tv" style="color: crimson"></i> پر بازدید ترین ها</h2>
            </div>
        </div>


        <div class="swiper products-swiper">
            <div class="swiper-wrapper">

                @await Html.PartialAsync("Product/_CarouselBoxProducts", Model)



            </div>

            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>


        <div class="btn-more-and-nav-slider">
            <a asp-controller="Product" asp-action="GetProducts" asp-route-type="@ViewBag.SelectedType.ToString()"
           class="btn btn-more-info">مشاهده ی همه</a>
        </div>


    }
    else
    {
        <div class="alert alert-warning">
            کالایی یافت نشد
        </div>
    }
</section>
