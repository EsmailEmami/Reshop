@model IEnumerable<ProductViewModel>

@foreach (var item in Model)
{
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="product-item box-shadow">
            <div class="product-img">
                <a asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@item.ProductId" asp-route-productName="@item.ProductTitle.Replace(" ","-")">
                    <img src="/images/1.jpg" alt="@item.ProductTitle" title="@item.ProductTitle" class="img-fluid">
                </a>
                
                <ul class="img-action-button">
                    <li>
                        <form asp-controller="Product" asp-action="AddToFavoriteProduct" onsubmit="return  AddProductToCart(this)">
                            <input type="hidden" value="@item.ProductId" name="productId" />
                            <input type="hidden" value="@item.ShopperId" name="shopperId" />
                            <button type="submit" ><i class="fal fa-heart"></i></button>
                        </form>

                  
                    </li>
                    <li>
                        <a href="#" title="مقایسه"><i class="fal fa-sync-alt"></i></a>
                    </li>
                    <li>
                        <form asp-controller="Cart" asp-action="AddToCart" onsubmit="return  AddProductToCart(this)">
                            <input type="hidden" value="@item.ProductId" name="productId" />
                            <input type="hidden" value="@item.ShopperId" name="shopperId" />
                            <button type="submit" class="btn btn-warning"><i class="fal fa-cart-plus"></i></button>
                        </form>
                    </li>
                </ul>

            </div>
            <div class="product-info">
                <h6 class="product-title">
                    <a asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@item.ProductId" asp-route-productName="@item.ProductTitle.Replace(" ","-")">
                        @item.ProductTitle
                    </a>
                </h6>
                <h6 class="brand-name"><i class="fas fa-industry-alt"></i> <strong>@item.BrandName</strong></h6>
                <h5 class="pro-price">@item.ProductPrice.ToToman()</h5>
            </div>
        </div>
    </div>
}