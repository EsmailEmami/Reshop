@model IEnumerable<ProductViewModel>

@foreach (var item in Model)
{
    <div class="item">
        <div class="col-sm-12">
            <div class="product-item box-shadow">
                <div class="product-img">
                    <a asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@item.ProductId" asp-route-productName="@item.ProductTitle.Replace(" ", "-")">
                        <img src="/images/1.jpg" alt="@item.ProductTitle" title="@item.ProductTitle" class="img-fluid">
                    </a>

                    <ul class="img-action-button">
                        <li>
                            <a href="#" title="افزودن به علاقه مندی ها"><i class="fal fa-heart"></i></a>
                        </li>
                        <li>
                            <a href="#" title="مقایسه"><i class="fal fa-sync-alt"></i></a>
                        </li>
                        <li>
                            <a onclick="AddProductToCart(@item.ProductId,'@item.ShopperUserId')" title="افزودن به سبد خرید"><i class="fal fa-cart-plus"></i></a>
                        </li>
                    </ul>

                </div>
                <div class="product-info">
                    <h6 class="product-title">
                        <a asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@item.ProductId" asp-route-productName="@item.ProductTitle.Replace(" ", "-")">
                            @item.ProductTitle
                        </a>
                    </h6>
                    <h6 class="brand-name"><i class="fas fa-industry-alt"></i> <strong>@item.BrandName</strong></h6>
                    <h5 class="pro-price">@item.ProductPrice.ToToman()</h5>
                </div>
            </div>
        </div>
    </div>
}