@model IAsyncEnumerable<UserInformationViewModel>

@{
    ViewData["Title"] = "Index";
    int rowCount = 1;
}
@section RightMenu
{
    @{ await Html.RenderPartialAsync("_RightMenu", RightMenuActivePage.UserPage); }
}


<a asp-action="AddOrEditUser" class="btn btn-success text-white"><i class="fal fa-user-plus"></i> کاربر جدید</a>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">نام و نام خانوادگی</th>
                <th scope="col">شماره تلفن</th>
                <th scope="col">دستورات</th>
            </tr>
        </thead>
        <tbody>
            @await foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@rowCount</td>
                    <td>@item.FullName</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <a asp-action="AddOrEditUser" asp-route-userId="@item.UserId" class="btn btn-warning text-white"><i class="fal fa-user-edit"></i> ویرایش</a>
                        <a asp-action="UserDetail" asp-route-userId="@item.UserId" class="btn btn-info text-white"><i class="fal fa-file-user"></i> جزئیات</a>
                        <form asp-action="RemoveUser" asp-route-userId="@item.UserId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger text-white"><i class="fal fa-user-minus"></i> حذف</button>
                        </form>

                    </td>
                </tr>


                rowCount++;
            }
        </tbody>
    </table>
</div>
