@model AddOrEditRoleViewModel

@{
    ViewData["Title"] = "افزودن مقام جدید";
}


<form asp-action="AddOrEditRole" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-sm-12 col-md-6">
            <input type="hidden" asp-for="RoleId" />

            <div class="form-field">
                <input asp-for="RoleTitle">
                <label><i class="far fa-list-alt"></i> نام مقام</label>
                <span asp-validation-for="RoleTitle" class="text-danger"></span>
            </div>

            <div class="form-field">
                <button type="submit" class="btn btn-success">
                    @((Model.RoleId == "") ? "افزودن" : "ویرایش")
                </button>
            </div>

        </div>

        <div class="col-sm-12 col-md-6">
            <h4 class="text-center">دسترسی های نقش</h4>

            <ul>
                @foreach (var permission in Model.Permissions.Where(c => c.ParentId == null))
                {
                    <li>
                        <input type="checkbox" name="SelectedPermissions" value="@permission.PermissionId" @(Model.RoleId != "" && Model.SelectedPermissions.Any(c => c == permission.PermissionId) ? "checked" : "") /> @permission.PermissionTitle
                        @if (Model.Permissions.Any(c => c.ParentId == permission.ParentId))
                        {
                            <ul>
                                @foreach (var sub in Model.Permissions.Where(c => c.ParentId == permission.PermissionId))
                                {
                                    <li>
                                        <input type="checkbox" name="SelectedPermissions" value="@sub.PermissionId" @(Model.RoleId != "" && Model.SelectedPermissions.Any(c => c == sub.PermissionId) ? "checked" : "") /> @sub.PermissionTitle
                                        @if (Model.Permissions.Any(c => c.ParentId == sub.ParentId))
                                        {
                                            <ul>
                                                @foreach (var sub2 in Model.Permissions.Where(c => c.ParentId == sub.PermissionId))
                                                {
                                                    <li>
                                                        <input type="checkbox" name="SelectedPermissions" value="@sub2.PermissionId" @(Model.RoleId != "" && Model.SelectedPermissions.Any(c => c == sub2.PermissionId) ? "checked" : "") /> @sub2.PermissionTitle
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
