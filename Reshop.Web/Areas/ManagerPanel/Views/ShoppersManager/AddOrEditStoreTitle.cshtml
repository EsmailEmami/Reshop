@model StoreTitle

@{
    ViewData["Title"] = "AddOrEditStoreTitle";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEditStoreTitle" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="StoreTitleId" />

            <div class="form-group">
                <label asp-for="StoreTitleName" class="control-label"></label>
                <input asp-for="StoreTitleName" class="form-control" />
                <span asp-validation-for="StoreTitleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
