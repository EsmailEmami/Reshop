@model IEnumerable<Category>

@{
    ViewData["Title"] = "مدیریت گروه ها";
    int rowCount = 1;
}
<p>
    <a class="btn btn-success text-white"
       onclick="ShowModal('@Url.Action("AddOrEditCategory", "CategoryManager", null, Context.Request.Scheme)', 'گروه جدید')">
        <i class="fal fa-layer-plus"></i> افزودن گروه جدید
    </a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryTitle)
            </th>
            <th>دستورات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@rowCount</td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryTitle)
                </td>
                <td>
                    <a class="btn btn-warning text-white"
                       onclick="ShowModal('@Url.Action("AddOrEditCategory", "CategoryManager", new {categoryId = item.CategoryId}, Context.Request.Scheme)', 'ویرایش گروه')">
                        <i class="fal fa-marker"></i> ویرایش
                    </a>
                    <form asp-action="RemoveCategory" asp-route-categoryId="@item.CategoryId" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger text-white">
                            <i class="fal fa-trash-alt"></i> حذف
                        </button>
                    </form>
                </td>
            </tr>
            rowCount++;
        }
    </tbody>
</table>


@section AfterMainOptions
{
    <partial name="_Modal" />

}

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}