@model AddOrEditCategoryViewModel

@{
    Layout = null;
}
<form asp-action="AddOrEditCategory" method="post" onsubmit="return SubmitFormData(this)">
    <div class="row">
        <div class="col-sm-12 col-lg-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />

            <div class="form-field">
                <input asp-for="CategoryTitle">
                <label><i class="far fa-list-alt"></i> نام گروه</label>
                <span asp-validation-for="CategoryTitle" class="text-danger"></span>
            </div>

            <div class="form-field">
                <button type="submit" class="btn btn-success">
                    ثبت
                </button>
            </div>
        </div>

        <div class="col-sm-12 col-lg-4">
            <h3 class="text-center">
                زیر گروه ها
            </h3>

            @if (Model.ChildCategories.Any())
            {
                @foreach (var item in Model.ChildCategories)
                {
                    <div class="form-check m-0">
                        <label>
                            @item.ChildCategoryTitle
                            <input type="checkbox" name="SelectedChildCategories"
                                   value="@item.ChildCategoryId" @((Model.CategoryId != 0 && Model.SelectedChildCategories.Any(c => c == item.ChildCategoryId) ? "checked" : "")) />
                            <span></span>
                        </label>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    زیر گروهی یافت نشد.
                </div>
            }
        </div>
    </div>
</form>

<script>
    inputJs();
</script>