@model AddOrEditAUXViewModel

@{
    ViewData["Title"] = Model.ProductId == 0 ? "AUX افزودن" : "AUX ویرایش";
}
@section RightMenu
{
    @{ await Html.RenderPartialAsync("_RightMenu", RightMenuActivePage.ProductPage); }
}

@section Css{
    <link href="~/css/select.css" rel="stylesheet" />
    <link href="~/css/ckEditor.css" rel="stylesheet" />
}

<form asp-action="AddOrEditAUX" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="ProductId" />
    <h3 class="title-header">مشخصات کالا</h3>
    <div class="row">

        <div class="col-sm-12 col-md-6">
            <div class="form-field">
                <input type="text" asp-for="ProductTitle" />
                <label><i class="far fa-box-open"></i> نام کالا</label>
                <span asp-validation-for="ProductTitle" class="text-danger"></span>
            </div>
        </div>

        @*store titles *@
        <div class="col-sm-12 col-md-6">
            <select onchange="GetBrandsOfStoreTitle(this.value)" asp-for="SelectedStoreTitle">
                <option value="">عنوان کالا</option>

                @if (Model.StoreTitles != null)
                {
                    @foreach (var item in Model.StoreTitles)
                    {
                        @:<option value="@item.StoreTitleId" @(Model.SelectedStoreTitle == item.StoreTitleId ? "selected" : "")>@item.StoreTitleName</option>
                    }
                }
            </select>
        </div>
        @* this is for brand *@
        <div class="col-sm-12 col-lg-4">
            <select id="brand" onchange="updateSelectsOfBand(this.value)" asp-for="SelectedBrand">
                @if (Model.Brands != null)
                {
                    <option value=""> لطفا برند را انتخاب کنید</option>
                    @foreach (var item in Model.Brands)
                    {
                        @:<option value="@item.Item1" @(Model.SelectedBrand == item.Item1 ? "selected" : "")>@item.Item2</option>
                    }
                }
                else
                {
                    <option value="">لطفا عنوان کالا را انتخاب کنید</option>
                }
            </select>
        </div>
        @* this is for official product *@
        <div class="col-sm-12 col-lg-4">
            <select id="officialProduct" asp-for="OfficialBrandProductId">
                @if (Model.OfficialProducts != null)
                {
                    <option value="">لطفا نام اختصاصی کالا را انتخاب کنید</option>
                    @foreach (var item in Model.OfficialProducts)
                    {
                        @:<option value="@item.Item1" @(Model.OfficialBrandProductId == item.Item1 ? "selected" : "")>@item.Item2</option>
                    }
                }
                else
                {
                    <option value="">لطفا برند را انتخاب کنید</option>
                }
            </select>
        </div>

        @* this is for child categories *@
        <div class="col-sm-12 col-lg-4">
            <select id="childCategory" asp-for="SelectedChildCategory">
                <option>لطفا برند را انتخاب کنید</option>
                @if (Model.ChildCategories != null)
                {
                    @foreach (var item in Model.ChildCategories)
                    {
                        @:<option value="@item.ChildCategoryId" @(Model.SelectedChildCategory == item.ChildCategoryId? "selected" : "")>@item.ChildCategoryTitle - @item.IsActive.BoolToText("فعال")</option>
                    }
                }
            </select>
        </div>

        <div class="col-sm-12 mb-4">
            <textarea id="editor" asp-for="Description"> </textarea>

            <div class="word-count">
                <div id="word-count">
                    کلمه ها : 0
                </div>
                <div id="character-count">
                    کاراکتر ها : 0
                </div>
            </div>
        </div>

        <div class="col-sm-12">
            <div class="form-check">
                <label>
                    این کالا فعال است
                    <input type="checkbox" checked asp-for="IsActive">
                    <span></span>
                </label>
            </div>
        </div>
    </div>

    <h3 class="title-header">تصاویر</h3>

    <div class="row justify-content-around">

        @if (Model.ProductId == 0)
        {
            <div class="col-auto">
                <div class="image-field">
                    <div class="image-area">
                        <img src="~/images/pattern/placeholder-image.png" alt="تصویر کالا" id="imgProduct1">
                    </div>
                    <div class="file-field">
                        <input asp-for="SelectedImage1" onchange="readURL(this, 'imgProduct1')">
                    </div>
                </div>
            </div>
            <div class="col-auto">
                <div class="image-field">
                    <div class="image-area">
                        <img src="~/images/pattern/placeholder-image.png" alt="تصویر کالا" id="imgProduct2">
                    </div>
                    <div class="file-field">
                        <input asp-for="SelectedImage2" onchange="readURL(this, 'imgProduct2')">
                    </div>
                </div>

            </div>
            <div class="col-auto">
                <div class="image-field">
                    <div class="image-area">
                        <img src="~/images/pattern/placeholder-image.png" alt="تصویر کالا" id="imgProduct3">
                    </div>
                    <div class="file-field">
                        <input asp-for="SelectedImage3" onchange="readURL(this, 'imgProduct3')">
                    </div>
                </div>

            </div>
            <div class="col-auto">
                <div class="image-field">
                    <div class="image-area">
                        <img src="~/images/pattern/placeholder-image.png" alt="تصویر کالا" id="imgProduct4">
                    </div>
                    <div class="file-field">
                        <input asp-for="SelectedImage4" onchange="readURL(this, 'imgProduct4')">
                    </div>
                </div>

            </div>
            <div class="col-auto">
                <div class="image-field">
                    <div class="image-area">
                        <img src="~/images/pattern/placeholder-image.png" alt="تصویر کالا" id="imgProduct5">
                    </div>
                    <div class="file-field">
                        <input asp-for="SelectedImage5" onchange="readURL(this, 'imgProduct5')">
                    </div>
                </div>

            </div>
            <div class="col-auto">
                <div class="image-field">
                    <div class="image-area">
                        <img src="~/images/pattern/placeholder-image.png" alt="تصویر کالا" id="imgProduct6">
                    </div>
                    <div class="file-field">
                        <input asp-for="SelectedImage6" onchange="readURL(this, 'imgProduct6')">
                    </div>
                </div>

            </div>
        }
        else
        {


            //images


            <input type="hidden" asp-for="SelectedImage1IMG" />
            <input type="hidden" asp-for="SelectedImage2IMG" />
            <input type="hidden" asp-for="SelectedImage3IMG" />
            <input type="hidden" asp-for="SelectedImage4IMG" />
            <input type="hidden" asp-for="SelectedImage5IMG" />
            <input type="hidden" asp-for="SelectedImage6IMG" />

            <div class="col-auto">
                <div class="image-field">
                    <div class="image-area">
                        <img src="~/images/pattern/@Model.SelectedImage1IMG" alt="تصویر کالا" id="imgProduct1">
                    </div>
                    <div class="file-field">
                        <input type="file" asp-for="SelectedImage1" onchange="readURL(this, 'imgProduct1')">
                    </div>
                </div>
            </div>
            <div class="col-auto">
                <div class="image-field">
                    <div class="image-area">
                        <img src="~/images/pattern/@Model.SelectedImage2IMG" alt="تصویر کالا" id="imgProduct2">
                    </div>
                    <div class="file-field">
                        <input type="file" asp-for="SelectedImage2" onchange="readURL(this, 'imgProduct2')">
                    </div>
                </div>

            </div>
            <div class="col-auto">
                <div class="image-field">
                    <div class="image-area">
                        <img src="~/images/pattern/@Model.SelectedImage3IMG" alt="تصویر کالا" id="imgProduct3">
                    </div>
                    <div class="file-field">
                        <input type="file" asp-for="SelectedImage3" onchange="readURL(this, 'imgProduct3')">
                    </div>
                </div>

            </div>
            <div class="col-auto">
                <div class="image-field">
                    <div class="image-area">
                        <img src="~/images/pattern/@Model.SelectedImage4IMG" alt="تصویر کالا" id="imgProduct4">
                    </div>
                    <div class="file-field">
                        <input type="file" asp-for="SelectedImage4" onchange="readURL(this, 'imgProduct4')">
                    </div>
                </div>

            </div>
            <div class="col-auto">
                <div class="image-field">
                    <div class="image-area">
                        <img src="~/images/pattern/@Model.SelectedImage5IMG" alt="تصویر کالا" id="imgProduct5">
                    </div>
                    <div class="file-field">
                        <input type="file" asp-for="SelectedImage5" onchange="readURL(this, 'imgProduct5')">
                    </div>
                </div>

            </div>
            <div class="col-auto">
                <div class="image-field">
                    <div class="image-area">
                        <img src="~/images/pattern/@Model.SelectedImage6IMG" alt="تصویر کالا" id="imgProduct6">
                    </div>
                    <div class="file-field">
                        <input type="file" asp-for="SelectedImage6" onchange="readURL(this, 'imgProduct6')">
                    </div>
                </div>

            </div>
        }


    </div>




    <h3 class="title-header">مشخصات کابل AUX</h3>
    <div class="row">
        <div class="col-sm-12 col-md-6">
            <div class="form-field">
                <input type="text" asp-for="CableMaterial" />
                <label><i class="far fa-venus-mars"></i> نوع کابل</label>
                <span asp-validation-for="CableMaterial" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-12 col-md-6">
            <div class="form-field">
                <input type="text" asp-for="CableLenght" />
                <label><i class="fal fa-ruler"></i> طول کابل</label>
                <span asp-validation-for="CableLenght" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-success text-white">ثبت</button>
    </div>
</form>


@section Scripts {
    <script src="~/js/select.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/lib/CKEditor/ckeditor.js"></script>

    <script>
        function updateSelectsOfBand(brandId) {
            GetOfficialProductsOfBrand(brandId);
            GetChildCategoriesOfBrand(brandId);
        }
    </script>



    <script>
        ClassicEditor
            .create(document.querySelector('#editor'), {

                toolbar: {
                    items: [
                        'heading',
                        '|',
                        'bold',
                        'italic',
                        'link',
                        'underline',
                        'bulletedList',
                        'numberedList',
                        '|',
                        'fontFamily',
                        'fontColor',
                        'fontSize',
                        'fontBackgroundColor',
                        'highlight',
                        '|',
                        'imageUpload',
                        'imageInsert',
                        'blockQuote',
                        'insertTable',
                        'mediaEmbed',
                        'undo',
                        'redo',
                        'findAndReplace'
                    ]
                },
                language: 'fa',
                image: {
                    toolbar: [
                        'imageTextAlternative',
                        'imageStyle:inline',
                        'imageStyle:block',
                        'imageStyle:side',
                        'linkImage'
                    ]
                },
                table: {
                    contentToolbar: [
                        'tableColumn',
                        'tableRow',
                        'mergeTableCells',
                        'tableCellProperties',
                        'tableProperties'
                    ]
                },
                fileBrowserUploadUrl:'/file_upload',
                fontFamily: {
                    options: [
                        'Sahel, sans-serif'
                    ]
                },
                fontSize: {
                    options: [
                        9,
                        10,
                        11,
                        'default',
                        13,
                        14,
                        15,
                        16,
                        17,
                        18,
                        19
                    ]
                },

            })
            .then(editor => {
                window.editor = editor;
                const wordCountPlugin = editor.plugins.get('WordCount');

                wordCountPlugin.on('update', (evt, data) => {
                    // data is an object with "words" and "characters" field
                    doSthWithNewWordsNumber(data.words);
                    doSthWithNewCharactersNumber(data.characters);
                });

            })
            .catch(error => {
                console.error(error);
            });
    </script>

    <script>
        function doSthWithNewWordsNumber(count) {
            document.getElementById('word-count').innerHTML = "کلمه ها" + count;
        }

        function doSthWithNewCharactersNumber(count) {
            document.getElementById('character-count').innerHTML = "کاراکتر ها" + count;
        }
    </script>
}