@model IEnumerable<ChildCategory>

@{
    ViewData["Title"] = "مدیریت زیر گروه ها";
    int rowCount = 1;
}

<p>
    <a asp-action="AddOrEditChildCategory" class="btn btn-success text-white">
        <i class="fal fa-layer-plus"></i> افزودن زیر گروه جدید
    </a>
</p>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>
            @Html.DisplayNameFor(model => model.ChildCategoryTitle)
        </th>
        <th>دستورات</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@rowCount</td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChildCategoryTitle)
                </td>
                <td>
                    <a asp-action="AddOrEditChildCategory" asp-route-childCategoryId="@item.ChildCategoryId" class="btn btn-warning text-white">
                        <i class="fal fa-marker"></i> ویرایش
                    </a>
                    <form asp-action="RemoveChildCategory" asp-route-childCategoryId="@item.ChildCategoryId" method="post" class="d-inline-block ml-2">
                        <button type="submit" class="btn btn-danger text-white">
                            <i class="fal fa-trash-alt"></i> حذف
                        </button>
                    </form>
                </td>
            </tr>
            rowCount ++;
        }
    </tbody>
</table>
